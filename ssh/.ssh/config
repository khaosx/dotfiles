kris@kan-macbook-air ~ $ cat ~/.ssh/config 
## --------------------- Specific Host Definitions --------------------- ##

# Use a convenient alias for your local UniFi controller
Host unifi.khaosx.io
    HostName 10.0.10.1
    User root
    IdentityFile ~/.ssh/id_ed25519

# Plex-01
Host plex-01
    User root

# Standard configuration for git operations
Host github.com
    Hostname ssh.github.com
    Port 443
    User git
    IdentityFile ~/.ssh/id_ed25519

# Storage Hosts
Host palladium
    User khaosx
    IdentityFile ~/.ssh/id_ed25519

Host homeassistant
    User khaosx
    IdentityFile ~/.ssh/id_ed25519

Host gitea.khaosx.io
     User git
     Port 2222
     IdentityFile ~/.ssh/id_ed25519

# Consolidated block for all Proxmox hosts
Host proxmox-*
    User root
    IdentityFile ~/.ssh/id_ed25519

# Old Servers
Host plex-old mediaops steady-rain homebridge-01 devops
    User kris
    IdentityFile ~/.ssh/id_ed25519

## --------------------- Global Defaults ----------------------------- ##
# These settings apply to ALL hosts unless overridden in a specific block above.
Host *
    # --- Security Defaults ---
    ForwardAgent no                             # Prevent exposing your SSH agent unless explicitly enabled for a host.
    ForwardX11 no                               # Disable running remote graphical apps by default.
    Protocol 2                                  # Force use of the modern and secure SSHv2 protocol.

    # --- Connection & Performance ---
    ControlMaster auto                          # Speeds up subsequent connections by reusing the initial one.
    ConnectTimeout 10                           # Time out connection attempts after 10 seconds.
    ServerAliveInterval 60                      # Send a keep-alive signal every 60 seconds to prevent timeouts.
    ServerAliveCountMax 30                      # Disconnect if the server is unresponsive for 30 intervals (30 min).

    # --- Default Credentials (often managed by 1Password) ---
    User jarvis                                 # Default remote username. 1Password may override this.
    IdentityFile ~/.ssh/id_ed25519_jarvis       # Default key to use. 1Password may override this.

Host *
  IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
  